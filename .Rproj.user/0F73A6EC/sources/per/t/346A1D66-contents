interventionSim <- function(outcome,
                            intervention,
                            outcomeVars = NULL,
                            interventionVars = NULL,
                            data,
                            n = 1000,
                            r = 1000,
                            bias = c(10, 20, 30, 40)) {
  sim_results <-
    replicate(
      r,
      interventionBias(
        outcome = outcome,
        intervention = intervention,
        outcomeVars = outcomeVars,
        data = data
      )
    )
  coefMat <- list(outcome = NULL, intervention = NULL, risk = list())
  for(i in 1:r) {
    coefMat$intervention[,i] <- sim_results[[1, i]]$coefficients
    coefMat$outcome[,i] <- sim_results[[2, i]]$coefficients
    for(j in 1:length(bias)) {
      coefMat$risk[[j]][,i] <- sim_results[[3,i]][[j]]$coefficients
    }
  }
  ### Something to average the coefficients across rows of each completed table.
  coef <- data.frame(
    Outcome = rowMeans(coefMat$outcome),
    Intervention = rowMeans(coefMat$intervention),
    ## Something to create columns for each element of `bias`.

  )
}
